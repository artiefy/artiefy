{
  "compilerOptions": {
    // Base Options
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    // Strictness and Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "skipLibCheck": true,
    // Next.js Specific
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "src/env.mjs"
  ],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts", "coverage"]
}
