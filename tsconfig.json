{
  "compilerOptions": {
    // Opciones base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    // Estrictas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "strictNullChecks": true,

    // Proyectos agrupados
    "lib": ["dom", "dom.iterable", "ES2023"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    // Alias de rutas
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  // Archivos incluidos
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "eslint.config.mjs",
    "next-env.d.ts",
    "**/*.cjs",
    "**/*.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  // Archivos excluidos
  "exclude": ["node_modules"]
}
