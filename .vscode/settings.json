  // Vira theme customization (applied workspace-wide)
  "editor.fontLigatures": "'ss01','ss05','dlig'",
  "editor.fontFamily": "JetBrains Mono, 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.letterSpacing": 0.5,
  "editor.lineHeight": 22,
  "explorer.decorations.badges": false,
  // Workbench / UI color adjustments (lighter foregrounds + selection/line highlight)
  "workbench.colorCustomizations": {
    "[Vira*]": {
      "foreground": "#E6E6E6",
      "editor.foreground": "#E6E6E6",
      "sideBar.foreground": "#DADADA",
      "activityBar.foreground": "#DADADA",
      "editorLineNumber.foreground": "#9AA3B2",
      "editorLineNumber.activeForeground": "#C8D1DA",
      "editor.selectionBackground": "#3A3F4B",
      "editor.selectionForeground": "#FFFFFF",
      "editor.lineHighlightBackground": "#2B2F36",
      "editorCursor.foreground": "#FFCC00",
      "editorIndentGuide.background1": "#2f3540",
      "editorIndentGuide.activeBackground1": "#39404a",
      // Sólo línea vertical separadora entre pestañas
      "tab.border": "#9AA3B2",
      // Desactivar líneas horizontales bajo/arriba de las pestañas (usar transparente con alpha)
      "editorGroupHeader.tabsBorder": "#00000000",
      // Evitar que aparezca la línea horizontal inferior cuando una pestaña recibe focus
      "tab.activeBorder": "#00000000",
      "tab.unfocusedActiveBorder": "#00000000",
      "tab.activeModifiedBorder": "#00000000"
    }
  },
  // Token / syntax color customizations for Vira (TextMate scopes)
  "editor.tokenColorCustomizations": {
    "[Vira*]": {
      "comments": "#7FB07F",
      "textMateRules": [
        {
          "scope": [
            "string",
            "constant.other.symbol"
          ],
          "settings": {
            "foreground": "#C3E88D"
          }
        },
        {
          "scope": [
            "keyword",
            "storage.type",
            "storage.modifier"
          ],
          "settings": {
            "foreground": "#C792EA",
            "fontStyle": "bold"
          }
        },
        {
          "scope": [
            "entity.name.function",
            "support.function"
          ],
          "settings": {
            "foreground": "#82AAFF"
          }
        },
        {
          "scope": [
            "variable",
            "variable.other.readwrite"
          ],
          "settings": {
            "foreground": "#FFCB6B"
          }
        },
        {
          "scope": [
            "entity.name.type",
            "support.type"
          ],
          "settings": {
            "foreground": "#FFCB6B",
            "fontStyle": "italic"
          }
        }
      ]
    },
    "[Vira Carbon]": {
      "textMateRules": [
        {
          "scope": [
            "*",
            "comment",
            "keyword",
            "storage",
            "variable.language",
            "entity.name.type"
          ],
          "settings": {
            "fontStyle": ""
          }
        }
      ]
    }
  },
  // Semantic token colors
  "editor.semanticTokenColorCustomizations": {
    "[Vira*]": {
      "rules": {
        "variable": "#ff6600",
        "property.readonly": "#0055ff",
        "function": "#82AAFF"
      }
    }
  }
