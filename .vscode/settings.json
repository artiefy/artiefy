{
  // Editor Configuration
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,

  // File Configuration
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.git/**": true
  },

  // Language-specific Formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

    // TypeScript Configuration
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.tsserver.maxTsServerMemory": 4096,
    "typescript.tsserver.nodePath": "C:\\Users\\ADMIN\\AppData\\Local\\fnm_multishells\\9168_1742401119834\\node.exe",
    "typescript.tsserver.watchOptions": {
      "watchFile": "useFsEvents",
      "watchDirectory": "useFsEvents",
      "fallbackPolling": "dynamicPriorityPolling"
    },
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.suggest.completeFunctionCalls": true,
  
  // ESLint Configuration
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["./"],
  "eslint.useFlatConfig": true,
  "eslint.run": "onType",
  "eslint.nodePath": "./node_modules",
  "eslint.debug": true,
  "eslint.rules.customizations": [
    { "rule": "import/order", "severity": "off" },
    { "rule": "no-unused-vars", "severity": "warn" }
  ],

  // Tailwind CSS Configuration
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "html": "html",
    "css": "css"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class:list",
    "classList"
  ],
  "tailwindCSS.suggestions": true,
  "tailwindCSS.hovers": true,
  "tailwindCSS.codeActions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.lint.recommendedVariantOrder": "warning",

  // CSS Validation
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  // Search and Performance
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true
  },

  // Spell Checker
  "cSpell.words": ["clases", "estudiantes", "Verificar"],
  "cSpell.language": "en,es-ES",
  
  // JavaScript/TypeScript Import Organization
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.completeFunctionCalls": true,

  // Git Integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true
}
