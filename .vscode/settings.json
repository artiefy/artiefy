{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib", // Usar la versión de TypeScript del espacio de trabajo
  "typescript.enablePromptUseWorkspaceTsdk": true, // Por razones de seguridad, se requiere que los usuarios opten por usar la versión de TypeScript del espacio de trabajo
  "typescript.preferences.autoImportFileExcludePatterns": [
    // useRouter debe ser importado desde `next/navigation` en lugar de `next/router`
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    // dar prioridad a Link de next/link en lugar de lucide-react
    "lucide-react"
  ],
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // Autocompletado de Tailwind CSS, agregar más si se usan en proyectos
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classNames",
    "containerClassName"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative", // Preferir importaciones no relativas
  "typescript.preferences.preferTypeOnlyAutoImports": true, // Preferir importaciones solo de tipo

  // Habilitar Prettier como el formateador predeterminado
  "editor.formatOnSave": true,

  // Corrección automática con ESLint y Prettier al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },

  // Habilitar eslint para todos los lenguajes soportados
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss",
    "github-actions-workflow"
  ]
}