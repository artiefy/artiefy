{
  "editor.formatOnSave": true, // Formatear automáticamente al guardar
  "editor.formatOnPaste": true, // Formatear automáticamente al pegar
  "editor.formatOnType": true, // Formatear automáticamente al escribir
  "editor.formatOnSaveMode": "file", // Formatear solo el archivo guardado
  "files.autoSave": "onWindowChange", // Guardar automáticamente cuando cambie el foco de la ventana
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always", // Corregir todos los problemas de ESLint al guardar
    "source.formatDocument": "always" // Formatear el documento al guardar
  },
  "eslint.validate": [
    "javascript", // Validar JavaScript
    "javascriptreact", // Validar JavaScript React
    "typescript", // Validar TypeScript
    "typescriptreact" // Validar TypeScript React
  ],
  "typescript.tsdk": "node_modules/typescript/lib", // Ruta del SDK de TypeScript
  "eslint.options": {
    "overrideConfigFile": "eslint.config.mjs" // Usar el archivo de configuración de ESLint especificado
  },
  "eslint.run": "onSave", // Ejecutar ESLint solo al guardar
  "eslint.rules.customizations": [
    { "rule": "tailwindcss/classnames-order", "severity": "off" }, // Desactivar la regla de orden de clases de Tailwind CSS
    { "rule": "import/order", "severity": "off" } // Desactivar la regla de orden de importaciones
  ],
  "editor.quickSuggestions": {
    "strings": true // Mostrar sugerencias rápidas para cadenas de texto
  },
  "prettier.requireConfig": true, // Requerir un archivo de configuración de Prettier
  "prettier.configPath": ".prettierrc.mjs", // Ruta del archivo de configuración de Prettier
  "prettier.useEditorConfig": true, // Usar la configuración del editor para Prettier
  "prettier.enableDebugLogs": true, // Habilitar logs de depuración de Prettier
  "prettier.documentSelectors": ["**/*.{js,jsx,ts,tsx}"], // Archivos para los cuales se aplicará Prettier
  "prettier.withNodeModules": false, // No formatear archivos dentro de node_modules
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Establecer Prettier como formateador por defecto
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier como formateador por defecto para JavaScript
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier como formateador por defecto para JavaScript React
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier como formateador por defecto para TypeScript
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier como formateador por defecto para TypeScript React
  },
  "prettier.resolveGlobalModules": true, // Resolver módulos globales de Prettier
  "prettier.ignorePath": ".prettierignore", // Ruta del archivo .prettierignore
  "prettier.requirePragma": false, // No requerir pragma para formatear
  "files.watcherExclude": {
    "**/.prettierrc.mjs": true, // Excluir archivo .prettierrc.mjs del watcher
    "**/prettier.config.mjs": true // Excluir archivo prettier.config.mjs del watcher
  },
  "editor.formatOnSaveTimeout": 3000, // Ajuste el tiempo de espera de formato (3 segundos)
  "editor.tabSize": 2, // Tamaño de la tabulación (2 espacios)
  "editor.insertSpaces": true, // Usar espacios en lugar de tabuladores
  "editor.rulers": [80], // Establecer una regla visual a los 80 caracteres
  "files.eol": "\n" // Usar salto de línea LF
}
