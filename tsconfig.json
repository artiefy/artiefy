{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@webgpu/types", "@types/jszip"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*",
    ".*/**/*",
    "./**/.*",
    "drizzle.config.ts",
    "next-env.d.ts",
    "next-video.config.js",
    "src/types/**/*.d.ts",
    "src/types/**/*.ts",
    "video.d.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next/types/**/*.ts",
    "new-types.d.ts"
  ],
  "exclude": ["node_modules", ".next", "build", "dist", ".vercel", "coverage"]
}
